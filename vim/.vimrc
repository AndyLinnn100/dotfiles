"call plug#begin('~/.vim/plugged')

"show line number
set nu

"relative number
"set relativenumber

"set cursorline

"syntax highlighting
syntax on

"indentation according to different file type
filetype indent on

"automatic indentation
set autoindent

"smart indentation
set smartindent

"amount of spaces for a tab
set tabstop=4

"amount of spaces for text shifting
set shiftwidth=4

"vim spelling checker
set nospell

"avoid breaking a word when wrapping lines
set linebreak

"wrapped text remains indentation
set bri

"highlight search results
set hlsearch

"ignore cases when searching
set ignorecase

"Plug 'lervag/vimtex'

"call plug#end()
